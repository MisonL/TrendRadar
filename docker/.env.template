# TrendRadar 环境变量模板
# 复制此文件为 .env 并填写具体数值

# 时区
TZ=Asia/Shanghai

# 核心配置
ENABLE_CRAWLER=true
ENABLE_NOTIFICATION=true
REPORT_MODE=current
DISPLAY_MODE=keyword

# Web 服务器
ENABLE_WEBSERVER=true
WEBSERVER_PORT=33888

# 企业微信通知 (WeWork)
WEWORK_WEBHOOK_URL=
WEWORK_MSG_TYPE=textcard

# 推送限制（前 N 条）
MAX_NOTIFY_NEWS=5
# 外部访问链接（用于卡片跳转）
WEB_URL=

# 其他通知渠道 (可选)
FEISHU_WEBHOOK_URL=
DINGTALK_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
NTFY_SERVER_URL=https://ntfy.sh
NTFY_TOPIC=
BARK_URL=
SLACK_WEBHOOK_URL=

# 运行模式
# 每天 9:00 执行: 0 9 * * *
CRON_SCHEDULE=0 9 * * *
RUN_MODE=cron
IMMEDIATE_RUN=false

# ================ 自定义优化 ================
# 自定义报告标题（网页标题及通知主题）
REPORT_TITLE=财经热点与A股机会捕捉
